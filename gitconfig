[user]
	email = dt@danieltull.co.uk
	name = Daniel Tull
	signingkey = AF2C4CB1
[commit]
	gpgsign = true
[init]
	defaultBranch = main
[core]
	editor = cedar
	autocrlf = input
	excludesfile = ~/.gitignore
	quotepath = false
[color]
	status = auto
	diff = auto
	interactive = auto
	branch = auto
	ui = auto
[color "branch"]
	current = yellow bold
	local = yellow
	remote = cyan
[color "diff"]
	meta = white
	frag = magenta
	old = red bold
	new = green bold
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[fetch]
	prune = true
[alias]
	graphlog = log --oneline --graph --decorate --all
	today = !sh -c 'THEUSER=$(git config --get user.email) && git log --committer=$THEUSER --pretty=format:\"- %s\" --since=yesterday --reverse' -
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[mergetool]
	prompt = false
[pull]
	ff = only
