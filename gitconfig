[user]
	email = dt@danieltull.co.uk
	name = Daniel Tull
[core]
	editor = mate -w
	autocrlf = input
	excludesfile = ~/.gitignore
	quotepath = false
[color]
	status = auto
	diff = auto
	interactive = auto
	branch = auto
	ui = auto
[color "branch"]
	current = yellow bold
	local = yellow 
	remote = cyan
[color "diff"]
	meta = white
	frag = magenta
	old = red bold
	new = green bold
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[alias]
	graphlog = log --oneline --graph --decorate --all
	pullmerge = !sh -c 'CURRENT=$(git name-rev --name-only head) && git checkout $1 && git pull && git merge $CURRENT' -
	pushcheckout = !sh -c 'CURRENT=$(git name-rev --name-only head) && git push && git checkout $1 && git merge $CURRENT' -
	consolidate = !sh -c 'CURRENT=$(git name-rev --name-only head) && git pullmerge $1 && git pushcheckout $CURRENT' -
	today = !sh -c 'THEUSER=$(git config --get user.email) && git log --committer=$THEUSER --pretty=format:\"- %s\" --since=yesterday --reverse' - 
	