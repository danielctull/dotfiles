usage() {
	echo "usage: git dctforcepush remote path, where remote is the name of the remote and path is a containter for a set of branches (feature/branches) for instance."
}

remote=$1
path=$2

for branch in $(git for-each-ref --format='%(refname:short)' refs/heads/$path/*); do
	git push $remote $branch:$branch -f
done
