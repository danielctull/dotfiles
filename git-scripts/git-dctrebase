usage() {
	echo "usage: git dctrebase path branch, where path is a containter for a set of branches (feature/branches) for instance and branch is the branch to rebase onto."
}

path=$1
rebase_branch=$2

for branch in $(git for-each-ref --format='%(refname:short)' refs/heads/$path/*); do
	echo $branch
	git checkout $branch
	git rebase $rebase_branch
done
